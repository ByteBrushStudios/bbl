# Database connection string (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/bblinks"

# NextAuth configuration
# Generate a secret using: openssl rand -base64 32
# Or for Windows PowerShell: [Convert]::ToBase64String((New-Object System.Security.Cryptography.RNGCryptoServiceProvider).GetBytes(32))
NEXTAUTH_SECRET=your_auth_secret
NEXTAUTH_URL=http://localhost:3000

# Initial Admin User (for seeding)
INITIAL_ADMIN_EMAIL="admin@example.com"
INITIAL_ADMIN_PASSWORD="securepassword"
INITIAL_ADMIN_NAME="Admin User"

# Application Settings
# These override the default values in the database
SITE_NAME="ByteBrush Links"
COMPANY_NAME="ByteBrush Studios"
SITE_DOMAIN="https://aka.bytebrush.dev"
SUPPORT_EMAIL="support@bytebrush.dev"
ENABLE_BASE_PAGES="true"

# Social Links
DISCORD_SERVER="https://discord.gg/Vv2bdC44Ge"
GITHUB_REPO="https://github.com/ByteBrushStudios/bbl"

# Authentication Settings
# Comma-separated list of allowed email domains
ALLOWED_DOMAINS="bytebrush.dev,example.com"

# SEO Settings
META_TITLE="ByteBrush Links - Branded Link Management"
META_DESCRIPTION="Create and manage branded short links with custom metadata for social media previews."
META_IMAGE_URL="/og-image.png"

# Design Settings
FAVICON="/favicon.ico"
LOGO_URL="/bytebrush/logo.png"
PRIMARY_COLOR="#22c55e"
SECONDARY_COLOR="#3b82f6"

# Link Settings
REDIRECT_DELAY="0"
TRACKING_PIXEL_ENABLED="true"
DEFAULT_LINK_ACTIVE="true"

# Optional: Analytics (uncomment and fill if using)
# ANALYTICS_KEY=your_analytics_key

# Optional: Custom domain for production
# NEXT_PUBLIC_APP_URL=https://aka.bytebrush.dev
